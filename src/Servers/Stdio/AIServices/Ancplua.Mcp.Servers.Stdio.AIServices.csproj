    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Ancplua.Mcp.Servers.Stdio.AIServices</RootNamespace>
    <AssemblyName>Ancplua.Mcp.Servers.Stdio.AIServices</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../../Infrastructure/ServiceDefaults/Ancplua.Mcp.Infrastructure.ServiceDefaults.csproj" />
