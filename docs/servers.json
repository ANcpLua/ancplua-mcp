[
  {
    "id": "ancplua-workstation",
    "name": "Ancplua Workstation Server",
    "description": "Local development tools: filesystem, git, CI, debug",
    "version": "1.0.0",
    "transport": "stdio",
    "categories": ["workstation", "filesystem", "git", "ci", "debug"],
    "config": {
      "command": "dotnet",
      "args": ["run", "--no-build", "--project", "src/Servers/Stdio/Workstation/Ancplua.Mcp.Servers.Stdio.Workstation.csproj"]
    }
  },
  {
    "id": "ancplua-ai-services",
    "name": "Ancplua AI Services Server",
    "description": "AI service orchestration and discovery",
    "version": "1.0.0",
    "transport": "stdio",
    "categories": ["ai-orchestration", "service-discovery"],
    "config": {
      "command": "dotnet",
      "args": ["run", "--no-build", "--project", "src/Servers/Stdio/AIServices/Ancplua.Mcp.Servers.Stdio.AIServices.csproj"]
    }
  },
  {
    "id": "ancplua-roslyn-metrics",
    "name": "Ancplua Roslyn Metrics Server",
    "description": "Code metrics and analysis via Roslyn",
    "version": "1.0.0",
    "transport": "stdio",
    "categories": ["code-intel", "metrics", "roslyn", "dotnet"],
    "config": {
      "command": "dotnet",
      "args": ["run", "--no-build", "--project", "src/Servers/Stdio/RoslynMetrics/Ancplua.Mcp.Servers.Stdio.RoslynMetrics.csproj"]
    }
  },
  {
    "id": "ancplua-github-apps",
    "name": "Ancplua GitHub Apps Server",
    "description": "GitHub App integrations for AI workflows",
    "version": "1.0.0",
    "transport": "stdio",
    "categories": ["github", "apps", "integrations"],
    "config": {
      "command": "dotnet",
      "args": ["run", "--no-build", "--project", "src/Servers/Stdio/GitHubApps/Ancplua.Mcp.Servers.Stdio.GitHubApps.csproj"]
    }
  },
  {
    "id": "ancplua-http",
    "name": "Ancplua HTTP Server",
    "description": "Remote/shared MCP access via HTTP",
    "version": "1.0.0",
    "transport": "http",
    "categories": ["http", "remote", "shared"],
    "config": {
      "stdio": {
        "command": "dotnet",
        "args": ["run", "--no-build", "--project", "src/Servers/Http/Gateway/Ancplua.Mcp.Servers.Http.Gateway.csproj"]
      },
      "http": {
        "url": "http://localhost:5000/mcp"
      },
      "https": {
        "url": "https://localhost:5001/mcp"
      }
    }
  }
]
